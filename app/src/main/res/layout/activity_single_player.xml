<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/singlePlayerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Main"
    tools:context=".SinglePlayer">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="@color/sunshineBR"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/buttonMenu"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:cardBackgroundColor="?BackgroundColour"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:strokeWidth="0dp">

        <ImageView
            android:id="@+id/menuButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:src="@drawable/icon_main_menu"
            android:tintMode="multiply"
            app:tint="?PrimaryTextColour" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/resultHolder"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="?BackgroundColour"
        app:cardElevation="0dp"
        app:cardCornerRadius="15dp"
        app:strokeWidth="0dp">

        <TextView
            android:id="@+id/resultText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/googlesans_medium"
            android:gravity="center"
            android:text="Choose"
            android:layout_marginHorizontal="16dp"
            android:textAlignment="center"
            android:textColor="?PrimaryTextColour"
            android:textSize="24sp" />

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/buttonSection">

            <FrameLayout
                android:id="@+id/aiResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="80dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/shape_two_tone_circle"
                    app:tint="?BackgroundColour" />

                <ImageView
                    android:id="@+id/aiChoice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="25dp"
                    android:src="@drawable/ai_picking"

                    android:tintMode="multiply" />
            </FrameLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/buttonSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/everything">

            <LinearLayout
                android:id="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:weightSum="3"
                app:layout_constraintBottom_toTopOf="@+id/score">

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/rockButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="?BackgroundColour"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_rock"
                        android:tintMode="multiply" />

                </com.google.android.material.card.MaterialCardView>

                <Space
                    android:layout_width="5dp"
                    android:layout_height="0dp" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/paperButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="?BackgroundColour"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_paper"
                        android:tintMode="multiply" />

                </com.google.android.material.card.MaterialCardView>

                <Space
                    android:layout_width="5dp"
                    android:layout_height="0dp" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/scissorsButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="?BackgroundColour"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_scissors"
                        android:tintMode="multiply" />

                </com.google.android.material.card.MaterialCardView>

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/score"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="7dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="3"
                app:layout_constraintBottom_toBottomOf="@id/everything">

                <RelativeLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/lossesScore"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:fontFamily="@font/googlesans_regular"
                        android:gravity="center"
                        android:text="Losses: 0"
                        android:textAlignment="center"
                        android:textColor="@color/clearWhite" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/drawsScore"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:fontFamily="@font/googlesans_regular"
                        android:gravity="center"
                        android:text="Draws: 0"
                        android:textAlignment="center"
                        android:textColor="@color/clearWhite" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/winsScore"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:fontFamily="@font/googlesans_regular"
                        android:gravity="center"
                        android:text="Wins: 0"
                        android:textAlignment="center"
                        android:textColor="@color/clearWhite" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>